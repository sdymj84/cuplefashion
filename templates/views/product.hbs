<div class="container uk-margin-large-top">
  <div uk-grid>

    <div uk-grid class="uk-grid-small uk-width-2-3@s uk-width-1-2@m">
      <div id="thumbnails" class="uk-width-1-6@s">
        {{#each product.images.images}}
        <div class="uk-margin-small">
          <a class="uk-inline" href="{{cloudinaryUrl this}}" data-caption="Caption 1">
            <img src="{{cloudinaryUrl this}}" alt="product image">
          </a>
        </div>
        {{/each}}
      </div>
      <div id="main-image" class="uk-width-5-6@s" uk-lightbox="animation: scale">
        {{#each product.images.images}}
        {{#if @first}}
        <div>
          <a class="uk-inline" href="{{cloudinaryUrl this}}" data-caption="Caption 1">
            <img src="{{cloudinaryUrl this}}" alt="product image">
          </a>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>

    <div class="uk-width-1-3@s uk-width-1-2@m">
      <h1 class="uk-margin-medium-bottom">{{product.title}}</h1>
      <ul class="uk-margin-medium">
        <li>{{product.bulletPoint1}}</li>
        <li>{{product.bulletPoint2}}</li>
        <li>{{product.bulletPoint3}}</li>
        <li>{{product.bulletPoint4}}</li>
        <li>{{product.bulletPoint5}}</li>
      </ul>

      <form class="uk-form-horizontal uk-margin-large">

        <div class="uk-margin">
          <div uk-form-custom="target: > * > span:first-child">
            <select class="product-color-select">
              <option value="">Please select color...</option>
              <option value="black">Black</option>
              <option value="navy">Navy</option>
              <option value="darkred">Wine</option>
            </select>
            <button class="uk-button uk-button-default" type="button" tabindex="-1">
              <span></span>
              <span uk-icon="icon: chevron-down"></span>
            </button>
          </div>
          <div class="product-color-preview"></div>
        </div>

        {{!-- // TODO (Minjun) - Create qty and buy button --}}
        <div class="uk-margin">
          <label class="uk-form-label" for="form-horizontal-select">Qty</label>
          <div class="uk-margin">
            <input class="uk-input uk-form-width-small" type="number" value=1 min=1 placeholder="1">
          </div>
        </div>

      </form>

    </div>

  </div>
  <div class="uk-margin-large">{{{product.description}}}</div>
</div>